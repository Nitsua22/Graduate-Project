<html>
<!-- SHOPPING APP HOME -->

<head>
    <link rel="stylesheet" type="text/css" href="css/styles.css">
</head>

<body>
    <div class="Banner">
        <h1>Welcome to the shop,
            <%= _accountName %>
        </h1>
    </div>
    <ul class="NavButtons">
        <li><a href="/logout">Logout</a></li>
        <li><a href="/viewcart">View Cart</a></li>
        <li><a href="/viewprofile">View Profile</a></li>
        <li><a href="/home">Home</a></li>

    </ul>

    <div class="view">
        <% if( _products.length>0 ){ %>
        <div class="content primary left">
            <h1>Items List</h1>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                <% _products.forEach(function (prod) { %>

                <tr>
                    <td><a href="/product?name=<%= prod['name'] %>"><%= prod['name'] %></a></td>
                    <td><%= prod['price'] %></td>
                    <td><%= prod['description'] %></td>
                    <td><a href="/additem?id=<%= prod['id'] %>" class="addItemButton">Add Item</a></td>
                </tr>
                <% }) %>
            </table>
        </div>
        <% } %>
        <% if( _cart.length>0 ){ %>
        <div class="content primary right">
            <h1>Cart List</h1>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                <% _cart.forEach(function (item) { %>

                <tr>
                    <td><a href="/product?name=<%= item['name'] %>"><%= item['name'] %></a></td>
                    <td><%= item['quantity'] %></td>
                    <td><%= item['price'] %></td>
                </tr>
                <% }) %>
            </table>
        </div>
        <% } %>


        <% if( _products.length === 0 ){ %>
        <div class="content primary">
            <h2>Account list</h2>
            <p>No accounts found! Please create an account.</p>
        </div>
        <% } %>
        <% if( _errorMessage ){ %>
        <div class="content alert">
            <%= _errorMessage %>
        </div>
        <% } %>
    </div>
</body>

</html>
